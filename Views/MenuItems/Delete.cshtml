@model MenuItem

@{
    ViewData["Title"] = "Delete Menu Item";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg w-100" style="max-width: 550px; border-radius: 12px;">
        <div class="card-header bg-danger text-white fw-bold text-center">
            Delete Menu Item
        </div>
        <div class="card-body">
            <h5 class="mb-3 text-center text-muted">Are you sure you want to delete this menu item?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-4 fw-bold">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 fw-bold">Category</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-secondary">@Model.Category</span>
                </dd>

                <dt class="col-sm-4 fw-bold">Price</dt>
                <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-4 fw-bold">Availability</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Availability ? "bg-success" : "bg-danger")">
                        @(Model.Availability ? "Available" : "Unavailable")
                    </span>
                </dd>
            </dl>

            <div class="d-flex justify-content-center gap-2">
                <form asp-action="Delete" class="flex-fill">
                    <input type="hidden" asp-for="ItemId" />
                    <input type="submit" value="Delete" class="btn btn-danger shadow-sm w-100" />
                </form>
                <a asp-action="Index" class="btn btn-secondary shadow-sm flex-fill w-100">Cancel</a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.12);
        }

    .btn {
        border-radius: 8px;
    }

    dl dt {
        font-size: 0.95rem;
    }

    dl dd {
        font-size: 0.95rem;
    }
</style>
