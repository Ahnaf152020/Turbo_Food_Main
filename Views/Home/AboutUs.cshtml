    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2c3e50;
            --secondary: #e74c3c;
            --accent: #3498db;
            --light: #f8f9fa;
            --dark: #343a40;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            background-color: #f8f9fa;
            padding: 20px 0;
        }

        .team-section {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.08);
            padding: 30px;
            margin: 20px auto;
            max-width: 1200px;
        }

        .team-member-card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            height: 100%;
        }

            .team-member-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            }

        .team-img {
            height: 200px;
            object-fit: cover;
        }

        .github-btn {
            background-color: #333;
            color: white;
            padding: 8px 15px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            transition: all 0.3s;
        }

            .github-btn:hover {
                background-color: #4078c0;
                color: white;
            }

        .social-links a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            color: white;
            background-color: var(--primary);
            transition: all 0.3s;
        }

            .social-links a:hover {
                transform: translateY(-3px);
                background-color: var(--secondary);
            }

        .section-title {
            position: relative;
            display: inline-block;
            margin-bottom: 30px;
            font-weight: 700;
        }

            .section-title:after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 0;
                width: 50px;
                height: 3px;
                background-color: var(--secondary);
            }

        .text-center .section-title:after {
            left: 50%;
            transform: translateX(-50%);
        }

        .page-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .team-role {
            color: #6c757d;
            font-style: italic;
            min-height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
